---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
import '../styles/components/header.css';
---

<header>
	<nav>
		<div class="logo">
			<h2 class="glow-white"><a href="/">{SITE_TITLE}</a></h2>
		</div>
		<div class="internal-links">
			<HeaderLink href="/">Home</HeaderLink>
			<HeaderLink href="/#about">Over Mij</HeaderLink>
			<HeaderLink href="/#skills">Skills</HeaderLink>
			<HeaderLink href="/#projects">Projecten</HeaderLink>
			<HeaderLink href="/#contact">Contact</HeaderLink>
			<HeaderLink href="/onderzoek">Onderzoek</HeaderLink>
			<HeaderLink href="/reflectie">Reflectie</HeaderLink>
			<HeaderLink href="/blog">Blog</HeaderLink>
		</div>
		<div class="social-links">
			<a href="https://github.com/Aidenhtg" target="_blank" class="no-animation">
				<span class="sr-only">GitHub</span>
				<i class="fab fa-github"></i>
			</a>
			<a href="https://youtube.com/@corussy" target="_blank" class="no-animation">
				<span class="sr-only">YouTube</span>
				<i class="fab fa-youtube"></i>
			</a>
		</div>
	</nav>
</header>

<div class="scroll-indicator"></div>

<script src="../scripts/animations.js"></script>

<style>
	header {
		background: #1f1f1f;
		padding: 20px 40px;
		position: sticky;
		top: 0;
		z-index: 100;
		box-shadow: 0 4px 10px rgba(0, 0, 0, 0.5);
		margin: 0;
	}

	nav {
		display: flex;
		justify-content: space-between;
		align-items: center;
	}

	.logo h2 {
		font-size: 24px;
		color: #ffffff;
		margin: 0;
	}

	.logo h2 a {
		color: #ffffff;
		text-decoration: none;
	}

	.internal-links {
		display: flex;
		gap: 20px;
	}

	.internal-links a {
		color: #e0e0e0;
		text-decoration: none;
		font-size: 18px;
		padding: 10px 15px;
		transition: color 0.3s, background 0.3s;
		border-radius: 5px;
		border-bottom: 4px solid transparent;
	}

	.internal-links a:hover,
	.internal-links a.active {
		color: #2575fc;
		background: rgba(255, 255, 255, 0.1);
		border-bottom-color: #2575fc;
	}

	.social-links {
		display: flex;
		gap: 15px;
	}

	.social-links a {
		color: #e0e0e0;
		font-size: 24px;
		transition: color 0.3s;
	}

	.social-links a:hover {
		color: #2575fc;
	}

	@media (max-width: 720px) {
		nav {
			flex-direction: column;
			gap: 15px;
		}

		.internal-links {
			flex-wrap: wrap;
			justify-content: center;
		}
	}
</style>
